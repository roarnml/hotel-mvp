model User {
  id         String   @id @default(cuid())
  fullName   String
  email      String   @unique
  password   String   // hashed
  role       Role     @default(STAFF)
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  bookings   Booking[]  // optional, if staff can create bookings
}

enum Role {
  SUPER_USER
  ADMIN
  STAFF
}

// Optional: for granular feature permissions (future-proof)
model Permission {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  roles       Role[]
}
